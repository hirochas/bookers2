<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved: </h3>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

   <div class= "row">
    <div class="col-md-3">
       <%= render 'shared/share', user: @user, book: @books %>

    <h2 class= "mt-3">New book</h2>

       <%= form_with model: @book do |f| %>

          <div class= "form-group">
            <label for>Title</label><br>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
          </div>
          <div class= "form-group">
            <label for>Opinion</label><br>
            <textarea class="form-control book_body" type-"text" name="book[body]" id="book_body"></textarea>
          </div>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
          <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
  	     <h2>Book detail</h2>

       	<table class="table table-hover table-inverse">



        <tbody>

        <tr>
         <td><%= image_tag @book.user.get_profile_image(100,100) %><br>

             <%= link_to user_path(@book.user.id) do %>
             <%= @book.user.name %><% end %></td>

         <td><%= @book.title %></td>
         <td><%= @book.body %></td>
         <td><% if @book.user == current_user %>
             <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
             <% end %></td>

         <td><% if @book.user == current_user %>
             <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger pull-right", "data-confirm" => "本当に削除しますか？" %>
         <% end %></td>



        </tr>
        </tbody>

     </table>

    </div>
    </div>
</div>
</div>
</div>

<div class= "container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>Editing Book</h2>

       <%= form_with model: @book, url:book_path do |f| %>

         <div class="form-group">
           <label for="title">Title</label><br>
           <%= f.text_field :title %>
        </div>

       <div class="form-group">
           <label for="Opinion">Opinion</label><br>
           <%= f.text_area :body %>
       </div>
       <input type="submit" name="commit" value="Update Book" class="btn btn-secondary" data-disable-with="Update Book">
      <% end %>
  </div>
</div>
</div>
<div class= "container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>Editing Book</h2>

       <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>error prohibited this obj from being saved:
         <ul>
         <% @book.errors.full_messages.each do |message| %></h3>
           <li><%= message %></li>
         <% end %>
         </ul>
         <% end %>

       <%= form_with model: @book, url:book_path do |f| %>

         <div class="form-group">
           <label for="title">Title</label><br>
           <%= f.text_field :title %>
        </div>

       <div class="form-group">
           <label for="opinion">Opinion</label><br>
           <%= f.text_area :body %>
       </div>
       <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
      <% end %>

      <%= link_to 'Show', book_path %>
      |
      <%= link_to 'Back', books_path %>
  </div>
</div>
</div>
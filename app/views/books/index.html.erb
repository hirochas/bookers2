

<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
 <% if @book.errors.any? %>
  <h3><%= @book.errors.count %>errors prohibited this obj from being saved: </h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class= "row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class= "table p-12">
       <tr></tr>
       <tr><th>name</th>
           <td><%= @user.name %></td>
       </tr>

       <tr><th>introduction</th>
           <td><%= @user.introduction %></td>
       </tr>

      </table>



    <% if @user.id == current_user.id %>
      <div class="mt-auto">
       <a class="btn btn-outline-secondary btn-block" role="button" href="/users/(params[:id])/edit"><i class="fa fa-user-cog fa-w-20"></i></a>
       </div>
    <% end %>

   <h2 class= "mt-3">New book</h2>


     <%= form_with model: @book do |f| %>

       <div class= "form-group">
          <label for>Title</label><br>
          <%= f.text_field :title %>
        </div>
          <div class= "form-group">
          <label for>Opinion</label><br>
           <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>


     <div class="col-md-8 offset-md-1">
  	     <h2>Books</h2>

       	<table class="table table-hover table-inverse">
  	       <thead>
           <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
           </tr>
        </thead>

       <% @books.each do |book| %>
        <tbody>

        <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "show", books_path(@book.id) %></td>
        </tr>
        </tbody>
        <% end %>
     </table>

    </div>
    </div>
</div>


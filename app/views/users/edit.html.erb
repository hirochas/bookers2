<div class= "container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    
    <%= form_with model: @user, url:user_path do |f| %>
    <h4>画像</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>
    <h4>名前</h4>
      <%= f.text_field :name %>
    <h4>説明</h4>
      <%= f.text_area :introduction %>
    <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>  
</div> 

<div class= "container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User info</h2>

         <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:
         <ul>
         <% @user.errors.full_messages.each do |message| %></h3>
           <li><%= message %></li>
         <% end %>
         </ul>
         <% end %>

       <%= form_with model: @user, url:user_path do |f| %>

         <div class="form-group">
           <label for="user_name">Name</label><br>
           <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
           <label for="user_image">Image</label><br>
           <%= f.file_field :profile_image, accept: "image/*" %>
       </div>
       <div class="form-group">
           <label for="introduction">Introduction</label><br>
           <%= f.text_area :introduction, class: "form-control" %>
       </div>
       <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
      <% end %>
  </div>
</div>
</div>

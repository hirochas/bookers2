<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class= "row">
<div class="col-md-3">
<h2>User info</h2>
 <div>
   <%= image_tag @user.get_profile_image(100,100) %>
 </div>

 <table class= "p-12">
  <tr><th>name</th>
  <td><%= @user.name %></td></tr>

  <tr><th>introduction</th></tr>


 </table>


<div class="row">
 
 <% if @user.id == current_user.id %>
    <div class="mt-auto">
    <a class="btn btn-outline-secondary btn-block" role="button" href="edit_user_path(@user)"><i class="fa fa-user-cog fa-w-20"></i></a>
    
    </div>
  <% end %>　　
 

 
  
 </div> 
</div>

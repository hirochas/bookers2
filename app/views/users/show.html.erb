<div class="container px-5 px-sm-0">
  <div class= "row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      
      
      <table class= "table p-12">
       　<tr></tr>
       　<tr><th>name</th>
           <td><%= @user.name %></td>
       　</tr>

       　<tr><th>introduction</th>
           <td><%= @user.introduction %></td>
       </tr>

 　　　</table>


<div class="row">

 <% if @user.id == current_user.id %>
    <div class="mt-auto">
    <a class="btn btn-outline-secondary btn-block" role="button" href="/users/(params[:id])/edit"><i class="fa fa-user-cog fa-w-20"></i></a>
    </div>
  <% end %>
</div>
 <h2 class= "mt-3">New book</h2>

  <%= form_with model: @book do |f| %>
    <div class= "form-group">
      <label for>Title</label>
      <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>
    <div class= "form-group">
      <label for>Opinion</label>
      <textarea class="form-control book_body" type-"text" name="book[body]" id="book_body"></textarea>
    </div>
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  <% end %>
  </div>

<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved: </h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <div class= "row">
    <div class="col-md-3">
      <%= render 'shared/share', user: @user, book: @book %>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: @book do |f| %>
        <div class= "form-group">
           <label for>Title</label>
           <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
       <div class= "form-group">
          <label for>Opinion</label>
          <textarea class="form-control book_body" type-"text" name="book[body]" id="book_body"></textarea>
       </div>
       <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>



  <div class="col-md-8 offset-md-1">
  	<h2>Books</h2>
  	<table class= "table p-12">
  	  <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
      </thead>

      <% @books.each do |book| %>
        <tbody>

        <tr>

         <td><%= link_to user_path(@user.id) do %>
         <%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
         <td><%= link_to book_path(book.id) do %>
             <%= book.title %><% end %></td>
         <td><%= book.body %></td>


        </tr>
        </tbody>
     <% end %>
     </table>


  </div>
  </div>
</div>